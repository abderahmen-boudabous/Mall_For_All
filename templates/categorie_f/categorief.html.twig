{% extends 'base1.html.twig' %}
{% block table%}
    {% for message in app.flashes('alert') %}
        <div class="alert alert-danger text-center">
           {{ message }}
        </div>
    {% endfor %}
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">List of categories</h6>
                <a href="{{ path('addCF') }}">Add new Categorie</a>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                    <tr class="text-dark">
                        <th scope="col"></th>
                        <th scope="col"> id </th>
                        <th scope="col"> Categorie </th>
                        <th scope="col"> supprimer </th>
                        <th scope="col"> update </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in categories %}
                        <tr>
                            <th scope="col"><input class="form-check-input" type="checkbox"></th>
                            <td> {{ i.id }}</td>
                            <td>{{ i.libelle}} </td>
                            <td><a class="btn btn-sm btn-primary" href="{{ path('suppCF', { 'id':i.id }) }}">Supprimer</a></td>
                            <td><a class="btn btn-sm btn-primary" href="{{ path('updateCF', { 'id':i.id }) }}">Update</a></td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}




