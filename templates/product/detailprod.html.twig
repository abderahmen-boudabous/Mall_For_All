{% extends 'base.html.twig' %}

{% block body %}

{% for i in products %}
<section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__breadcrumb">
                            <a href="/home">Home</a>
                            <a href="/afficheB">Shops</a>
                            <span>Product Details</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                                    <div class="product__thumb__pic set-bg" data-setbg="{{ (asset('upload/'~ i.photo)) }}">
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">
                                    <div class="product__thumb__pic set-bg" data-setbg="{{ (asset('upload/'~ i.photo2)) }}">
                                    </div>
                                </a>
                            </li>
                            
                            
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="{{ (asset('upload/'~ i.photo)) }}" alt="">
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="{{ (asset('upload/'~ i.photo2)) }}" alt="">
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__content">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            
                            <ul>
                                <li> Product name :  {{ i.name }}</li>
                                <li>Type : {{ i.type }}</li>
                                <li>Stock :{% if i.stock != 0 %}
                                   <td>In stock</td>
                                           {% else %}
                                      <td>Out of stock</td>
                                        {% endif %}</li>
                                <li>Shop : {{ i.Shop.name }}</li>
                                <li>Price : {{ i.price }}Dt</li>
                               <p>
    <a href="{{ path('app_likess', {'id': i.id}) }}" class="text-danger">&#128077; </a>
    {{ i.likes|default(0) }} like(s)

    <a href="{{ path('app_dislikess', {'id': i.id}) }}" class="text-danger">&#128078; </a>
    {{ i.dislike|default(0) }} dislike(s)
</p>

                            </ul>
                            <div class="product__details__cart__option">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1">
                                    </div>
                                </div>
                                <a href="#" class="primary-btn">add to cart</a>
                            </div>
                            <div class="product__details__btns__option">
                                <a href="#"><i class="fa fa-heart"></i> add to wishlist</a>
                                <a href="#"><i class="fa fa-exchange"></i> Add To Compare</a>
                            </div>
                            <div class="product__details__last__option">
                                <h5><span>Guaranteed Safe Checkout</span></h5>
                                <img src="{{ asset('img/shop-details/details-payment.png') }}" alt="">
                                
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
    <div class="row">
  <div class="col-md-12">
    <h3>Customer Reviews</h3>
    <div class="comment-list">
     {% for comment in comments %}
  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text">{{ comment.comment }}</p>

      <p>
        <a href="{{ path('app_likes', {'id': comment.id}) }}" class="text-danger">&#128077; </a>
{% if comment.Likes is not empty %}
    {{ comment.Likes }} like(s)
{% else %}
    0 like
{% endif %}

<a href="{{ path('app_dislikes', {'id': comment.id}) }}" class="text-danger">&#128078; </a>
{% if comment.Dislike is not empty %}
    {{ comment.Dislike }} dislike(s)
{% else %}
    0 dislike
{% endif %}
      </p>
    </div>
  </div>
{% endfor %}
    </div>
  </div>
</div>
  <a href="{{ path('addcomment', {'id': i.id}) }}" class="btn btn-primary">Add Comment</a>


 {% endfor %}
{% endblock %}


