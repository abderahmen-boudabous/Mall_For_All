{% extends 'base.html.twig' %}

{% block body %}

  <table class="table" border = "3">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Email</th>
        <th scope="col">Date</th>
        <th scope="col">Logo</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
      {% for i in Shops %}
        <tr>
          <td>{{ i.name }}</td>
          <td>{{ i.description }}</td>
          <td>{{ i.email }}</td>
          <td>{{ i.date }}</td>
          <td><img src="{{ (asset('uploads/'~ i.img)) }}" alt="LOGO" width="80" height="80"> </td>
     <td> <button ><a href="{{path('Dproduct',{'id':i.id })}}">detail</a>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {% if isPaginated %}     

 <div class="row">  
    <nav aria-label="col Page navigation example">
    <ul class="pagination">
     {% if page != 1 %}
    <li class="page-item"><a class="page-link" href="{{path('afficheB', {page: page -1, nbre: nbre})}}">Previous</a></li>
    {% endif %}
     {% for i in range(1,nbrePage) %}
    <li class="page-item"><a class="page-link" href="{{path('afficheB', {page: i, nbre: nbre})}}">{{i}}</a></li>
     {% endfor %}
     {% if page != nbrePage %}
    <li class="page-item"><a class="page-link" href="{{path('afficheB', {page: page +1, nbre: nbre})}}">Next</a></li>
    {% endif %}
    
  </ul>
</nav>  
</div>
{% endif %}

{% endblock %}

