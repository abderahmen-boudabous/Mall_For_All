{% extends 'base2.html.twig' %}

{% block body %}
  <table class="table" border = "3" >
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Email</th>
        <th scope="col">Date</th>
        <th scope="col">Logo</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {% for i in Shops %}
        <tr>
          <td>{{ i.name }}</td>
          <td>{{ i.description }}</td>
          <td>{{ i.email }}</td>
          <td>{{ i.date }}</td>
          <td><img src="{{ (asset('uploads/'~ i.img)) }}" alt="LOGO" width="80" height="80"> </td>
          <td>
            <a href="{{ path('updateB', {'id': i.id}) }}" class="btn btn-primary">Update</a>
            <a class="btn btn-danger" href="{{ path('confirm_delete', {'id': i.id}) }}">Delete</a>
</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <button class="btn btn-success">
    <a href="{{ path('afficheBB') }}" style="color: #ffffff;">Add Shop</a>
  </button>
{% endblock %}
{% block stylesheets %}
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }

    th, td {
      border: 1px solid #dddddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #dddddd;
    }

    .add-button {
      background-color: #4CAF50;
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 5px;
    }
  </style>
{% endblock %}