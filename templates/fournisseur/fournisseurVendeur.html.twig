            </div>
        </nav>
    </div>
    <!-- Sidebar End -->
{% endblock %}
{% block table%}
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">List of suppliers</h6>
            </div>
            <div class="row">
            {% for i in fournisseurs %}
            <div class="card" style="width: 25%">
                <img class="" src="{{ asset('uploads/fournisseur/'~i.img) }}" alt="" width="100%">
                <div class="card-body">
                    <h5 class="card-title">Name: {{i.nom  }}</h5>
                    <h5 class="card-title">Category: {{i.categorie.libelle  }}</h5>
                    <a class="btn btn-sm btn-primary" href="{{ path('detailFV', { 'id': i.id  }) }}">Details</a>
                </div>
            </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

