 {% extends 'base.html.twig' %} 

{% block title %}Log in!{% endblock %}
{% block header %}
<header class="header">
    <div class="">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 mx-auto">
                    <div class="header__logo">
                        <a href=""><img src="{{ asset('img/logoMFA.png') }}" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5">
                    <div class="header__top__right">
                        <div class="header__top__links">
                            
                        </div>
                    </div>
                </div>
           
        
  

 
{% endblock %}


{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div class="container col-12 text-center" align="center">
   <h1 class="h3 mb-3 font-weight-normal text-white"> sign in</h1>
  <div class="row mb-3 col-4 mx-auto">
     <label for="inputEmail3" class="col-sm-2 text-center">Email</label>
      <input type="email" class="form-control" id="inputEmail3" value="{{ last_username }}" name="email" class="form-control col-4" autocomplete="email" required autofocus>
    </div>
    
    <div class="row mb-3 col-4 mx-auto">
    <label for="inputPassword" class="col-sm-2">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    ></div>
  
   
    
    <button class="btn btn-lg btn-outline-primary" type="submit">
        Sign In
    </button>
    </div>

</form>
</div>
</div>
</div>
</div>
</header>  


{% endblock %}

